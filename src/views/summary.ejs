<h1><%= accounts.nickname %></h1>

<table class="data-panel">
  <tr>
    <th>Name</th>
    <th>Account Number</th>
    <% if (accounts.unique_name == 'credit') { %>
      <th>Available Balance</th>
    <% } else { %>
      <th>Prior Balance</th>
    <% } %>
    <th>Current Balance</th>
  </tr>
  <tr>
    <td><a href="/<%= accounts.unique_name %>"><%= accounts.nickname %></a></td>
    <td><%= accounts.account_number %></td>
    <% if (accounts.unique_name == 'credit') { %>
      <td>$<%= accounts.available %></td>
    <% } else { %>
      <td>$<%= accounts.prior_balance %></td>
    <% } %>
    
    <td>$<%= accounts.balance %></td>
  </tr>
</table>